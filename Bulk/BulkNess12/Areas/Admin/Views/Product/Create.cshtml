@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 test-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border-p3">
            <div class="form-floating py-2 col-12">
                @* ADD IN INPUTS IN RELATION TO THE MODEL. *@
                <input asp-for="Title" class="form-control border-0 shadow">
                <label asp-for="Title" class="ms-2"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" class="form-control border-0 shadow">
                <label asp-for="ISBN" class="ms-2"></label>
                <span asp-vaildation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                    Back to list
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

